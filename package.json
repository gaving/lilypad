{
  "name": "lilypad",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run -w @lilypad/app build",
    "lint": "DEBUG=eslint:cli-engine eslint --ignore-pattern 'build/*' --ignore-pattern 'public/*' --ext js --ext json --color .",
    "start": "concurrently 'npm run start:client' 'npm run start:server'",
    "start:client": "npm run -w @lilypad/app start",
    "start:server": "npm run -w @lilypad/server start"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.22.15",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-json-files": "^3.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^48.0.1",
    "prettier": "^3.0.3"
  },
  "engines": {
  },
  "license": "MIT",
  "private": true
}
