{
  "name": "@lilypad/api",
  "version": "10.0.0",
  "description": "Lilypad API - Express server for Docker container management",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "build": "echo 'No build step needed for API'",
    "dev": "nodemon server.js",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "start": "node server.js",
    "clean": "rm -rf node_modules"
  },
  "dependencies": {
    "@types/got": "^9.6.12",
    "dotenv": "^17.2.4",
    "express": "^5.1.0",
    "got": "^14.6.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@lilypad/config": "workspace:*",
    "nodemon": "^3.1.10"
  }
}
